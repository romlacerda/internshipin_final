<%= simple_form_for(@answer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :descricao %>
    <%= f.association :user %>
    <%= f.association :topic %>
    <%= f.association :answer %>    
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
