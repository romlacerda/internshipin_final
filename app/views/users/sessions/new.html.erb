<section>
  <div class="col-md-12" id="login-page">
    <div class="col-md-8" id="fundo-alunos"></div>
    <div class="col-md-4" id="login">
      <div class="col-md-8 col-md-offset-2">
          <div id="logo" style="margin-top: 150px;">
          </div>
          <h3 class="text-center">Bem-vindo(a)</h3>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="col-md-12">
              <%= f.label "MatrÃ­cula", class: "label-login" %>
              <%= f.input :matricula, autofocus: true, placeholder: "Ex: 201400123", input_html: { class: "form-control", value: "" }, label: false %>
            </div>

            <div class="col-md-12">
              <%= f.label "Senha", class: "label-login" %>
              <%= f.input :password, required: true, :placeholder => "Senha", input_html: { class: "form-control" }, label: false %>
            </div>

            <%#if devise_mapping.rememberable? -%>
              <!--<div class="field">
                <%#= f.check_box :remember_me %>
                <%#= f.label :remember_me %>
              </div>-->
            <%# end -%>

            <div class="col-md-12">
              <%= f.submit "Entrar", class: "btn btn-success" %>
            </div>
          <% end %>

          <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</section>

<script type="text/javascript">
  function abrirModalCadastro() {
    $("#modalCadastro").modal("show");
  };
</script>